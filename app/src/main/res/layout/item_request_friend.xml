<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="62dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivFriendRequestProfile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:src="@color/color_simple_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/ivFriendRequestProfile"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMyNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="sans-serif-medium"
            android:text="닉네임"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvMyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-medium"
            android:text="조현욱"
            android:textColor="@color/color_simple_gray"
            android:textSize="10sp"
            android:textStyle="normal" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_accept_friend"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:background="@color/light_indigo"
        android:text="@string/text_accept"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="83dp"/>


    <Button
        android:id="@+id/btn_refuse_friend"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:background="@color/light_grey"
        android:text="@string/text_refuse"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"/>
</RelativeLayout>